---
// styles
import '@/styles/normalize.scss';
import '@/styles/global.scss';

// components
import Metadata from '@/components/Metadata/index.astro';
import Navbar from '@/components/Navbar';
import Footer from '@/components/Footer';

// script
import Script from '@/script/index.script.astro';

export type Props = {
  lang: string;
  title: string;
  description: string;
};

const { lang, title, description } = Astro.props as Props;
---

<html lang={lang || 'en'}>
  <head>
    <Metadata title={title} description={description} />
  </head>
  <body>
    <main>
      <Navbar isBlog={true} client:idle />
      <slot />
      <Footer />
    </main>
    <Script />
  </body>
</html>
